#!/bin/env bash
# feature-switch - Turn features on/off
IAMAT=$(dirname $0)
source $IAMAT/base

skf-turn-on() {
  SEDSTR="/#\!/a source $SWISSKNIFE_HOME\/$1"
  sed -i "$SEDSTR" $IAMAT/tools
}

skf-turn-off() {
  SEDSTR="/\\/$1$/d"
  sed -i $SEDSTR $IAMAT/tools
}

skf-show() {
  echo "Installed tools"
  awk -F '/' 'NR>1 { print "  "$NF }' $IAMAT/tools
}

skf-add-hook(){
  
}
